import java.util.Scanner;

public class Exercises{
	public static void main(String[] argds) {
		double sum = 0;
		for(double i = 1; i <= 1000000;i++) {
			double n1 = Math.pow(-1, i+1);
			double n2 = 2 * i - 1;
			sum = sum + n1 / n2;
		}
		System.out.print(4 * sum);
	}
}

