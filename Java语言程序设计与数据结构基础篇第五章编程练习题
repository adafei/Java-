import java.util.Scanner;

public class Exercises{
	public static void main(String[] argds) {
		int count = 0;
		for(int i = 100; i < 1000;i++) {
			if (i % 5 == 0 && i % 6 == 0) {
				++count;
				if(count % 10 == 0) {
					System.out.print(i + " \n");
				}
				else {
					System.out.print(i + " ");
				}
			}
		}
	}
}

