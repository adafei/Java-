import java.util.Scanner;

public class Exercises{
	public static void main(String[] argds) {
	    Scanner input = new Scanner(System.in);
		System.out.println("Enter a integer:");
		int n = input.nextInt();
		int i = 2;
		while(i < n) {
			if(n %i ==0) {
				n = n / i;
				System.out.println(i);
			}
			else {
				i++;
			}
		}
	}
}

5.17
import java.util.Scanner;

public class Exercises{
	public static void main(String[] argds) {
	    Scanner input = new Scanner(System.in);
	    System.out.print("enter a number from 1 to 15：");
	    int n = input.nextInt();
	    for (int i = 1; i <= n; i++) {
	    	//打印空格
	    	for (int j = n - i; j >= 1; j--) {
	    		System.out.print(" " + " ");
	    	}
	    	//打印数字
	    	for (int j = i; j >= 1; j--) {
	    		System.out.print(" " + j);
	    	}
	    	for (int j = 2; j < i + 1; j++) {
	    		System.out.print(" " + j);
	    	}
	    	System.out.println();
	    }
	}
}

