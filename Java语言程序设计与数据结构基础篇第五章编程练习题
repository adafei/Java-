import java.util.Scanner;
public class Exercises{
	public static void main(String[] argds) {
		System.out.println("千克                    磅");
		
		for(int i = 0; i < 200;i++){
			if (i % 2 ==1)
				System.out.println(i + "         " + i * 2.2);
		}
	}
}

